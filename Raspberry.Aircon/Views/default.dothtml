@viewModel Raspberry.Aircon.Interface.ViewModels.DefaultViewModel, Raspberry.Aircon.Interface
@masterPage Views/MasterPage.dotmaster
<dot:Content ContentPlaceHolderID="MainContent">

    <h1>{{value: Title}}</h1>

    <h2>Led lights</h2>
    <div DataContext="{value:  LedLightsViewModel}">
        <dot:Button Text="Switch On" Click="{command: SwitchOn()}" />
        <dot:Button Text="Switch Off" Click="{command: SwitchOff()}" />
    </div>
    <h2>Air Conditioner</h2>
    <div DataContext="{value:  AirConditionerViewModel}">
        <dot:TextBox Text="{value:   Temperature }" />
        <dot:Button Text="Start Conditioner" Click="{command: Start()}" />
        <br />
        <br />

        <dot:Button Text="Stop Conditioner" Click="{command: Stop()}" />
    </div>
    <dot:ValidationSummary IncludeErrorsFromTarget="true" />
</dot:Content>
